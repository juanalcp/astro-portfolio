---
import "@fontsource/jost";
import Header from "components/Header/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-b animate-blurred-fade-in">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Juan Alcaraz Pieters portfolio" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <Header />
  <body>
    <main>
      <slot />
    </main>
  </body>

  <style is:global>
    @tailwind base;

    root {
      --accent: 136, 58, 234;
      --accent-light: 224, 204, 250;
      --accent-dark: 49, 10, 101;
      --accent-gradient: linear-gradient(
        45deg,
        rgb(var(--accent)),
        rgb(var(--accent-light)) 30%,
        white 60%
      );
    }
    html {
    }

    @layer base {
      html {
        font-family: "Jost", system-ui, sans-serif;
        @apply text-text-1;
      }

      h1,
      h2,
      h3 {
        @apply text-text-1;
      }

      h1 {
        @apply text-2xl;
      }

      h2 {
        @apply text-xl;
      }
    }
  </style>
</html>
